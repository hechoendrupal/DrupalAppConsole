# {{ entity_class }} routing definition
{{ module }}.{{ entity_name }}.view:
  path: '/{{ module }}/{{ '{'~entity_name~'}' }}'
  defaults:
    _entity_view: '{{ entity_name }}'
    _title: '{{ entity_class }} Content'
  requirements:
    _entity_access: '{{ entity_name }}.view'

{{ module }}.{{ entity_name }}.list:
  path: '/admin/config/system/{{ module }}/{{ entity_name }}'
  defaults:
    _entity_list: '{{ entity_name }}'
    _title: '{{ entity_class }} List'
  requirements:
    _permission: 'view {{ entity_class }} entity'

{{ module }}.{{ entity_name }}.add:
  path: '/admin/config/system/{{ module }}/{{ entity_name }}/add'
  defaults:
    _entity_form: {{ entity_name }}.add
    _title: 'Add {{ entity_class }}'
  requirements:
    _entity_create_access: '{{ entity_name }}'

{{ module }}.{{ entity_name }}.edit:
  path: '/admin/config/system/{{ module }}/{{ entity_name }}/{{ '{'~entity_name~'}' }}/edit'
  defaults:
    _entity_form: {{ entity_name }}.edit
    _title: 'Edit {{ entity_class }}'
  requirements:
    _entity_access: '{{ entity_name }}.edit'

{{ module }}.{{ entity_name }}.delete:
  path: '/admin/config/system/{{ module }}/{{ entity_name }}/{{ '{'~entity_name~'}' }}/delete'
  defaults:
    _entity_form: {{ entity_name }}.delete
    _title: 'Delete {{ entity_class }}'
  requirements:
    _entity_access: '{{ entity_name }}.delete'

{{ module }}.{{ entity_name }}.settings:
  path: 'admin/structure/{{ module }}/manage/{{ entity_name }}'
  defaults:
   _form: '\Drupal\{{ module }}\Form\{{ entity_class }}SettingsForm'
   _title: '{{ entity_class }} Settings'
  requirements:
    _permission: 'administer {{ entity_class }} entity'
